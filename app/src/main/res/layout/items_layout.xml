<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:textAlignment="center">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/menuLayout"
        android:layout_marginTop="0.3dp"
        android:clickable="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/item_image"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/item_name"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:layout_alignTop="@+id/item_image"
                android:layout_alignLeft="@+id/item_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/item_desc"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/item_name"
                android:layout_toRightOf="@+id/item_image"
                android:layout_toEndOf="@+id/item_image"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Add To Cart"
                android:id="@+id/btn_cart"
                android:background="#80000000"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:onClick="addItem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="100"
                android:id="@+id/item_price"
                android:layout_alignTop="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:id="@+id/linearLayout2"
                android:layout_above="@+id/btn_cart"
                android:layout_alignLeft="@+id/btn_cart"
                android:layout_alignStart="@+id/btn_cart">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="-"
                android:id="@+id/decrease"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/item_image"
                android:layout_toEndOf="@+id/item_image"
                android:clickable="true"
                android:textColor="#fff"
                android:background="#80000000"
                android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="100"
                    android:id="@+id/item_quantity"
                    android:layout_alignBottom="@+id/btn_cart"
                    android:layout_alignTop="@+id/linearLayout"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="center" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="+"
                android:id="@+id/increase"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:textColor="#fff"
                android:background="#80000000" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rs."
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/linearLayout2"
                android:layout_alignLeft="@+id/item_desc"
                android:layout_alignStart="@+id/item_desc" />


        </RelativeLayout>





    </android.support.v7.widget.CardView>




</LinearLayout>